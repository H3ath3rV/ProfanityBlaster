{
  "name": "profanity-blaster",
  "version": "1.0.0",
  "description": "Clean Audio & Video Filter - Remove Profanity & Blasphemy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "dev": "electron . --dev"
  },
  "keywords": [
    "profanity",
    "filter",
    "audio",
    "video",
    "clean",
    "family-friendly"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.profanityblaster.app",
    "productName": "Profanity Blaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "dmg": {
      "title": "Profanity Blaster",
      "icon": "assets/icon.icns",
      "contents": [
        { "x": 110, "y": 150 },
        { "x": 440, "y": 150, "type": "link", "path": "/Applications" }
      ]
    }
  }
}
